{
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readable",
		"SharedArrayBuffer": "readable"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],

		"no-unused-vars": "warn",
		"no-mixed-spaces-and-tabs": [
			"warn",
			"smart-tabs"
		],
		"array-bracket-spacing": [
			"warn",
			"always",
			{
				"singleValue": true
			}
		],
		"object-curly-spacing": [
			"error", "always"
		],
		"no-console": "warn",
		"no-extra-parens": "warn",
		"comma-spacing": ["error", {
			"before": false,
			"after": true
		}],

		"eol-last": ["warning", "never"]
	}
}